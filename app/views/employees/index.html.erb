<div class="container">
  <% unless notice.blank?%>
    <div class="alert alert-info">
      <p id="notice"><%= notice %></p>
    </div>
  <%end%>
     <h1>Maple Employees</h1>
    <div class="pull-right">
     <%= link_to '<strong>New Employee</strong>'.html_safe, new_employee_path %>
    </div>


  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Department Name</th>
        <th>Doj</th>
        <th>Mobile</th>
        <th>Salary</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= employee.name %></td>
          <td><%= employee.department.name unless employee.department.blank?%></td>
          <td><%= employee.doj %></td>
          <td><%= employee.mobile %></td>
          <td><%= employee.salary %></td>
          <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
          <td><%= link_to 'Delete', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div>